<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install type="plugin" group="search" version="1.5.0">
	<name>Phoca Gallery Search Plugin</name>
	<creationDate>17/06/2009</creationDate>
	<author>Jan Pavelka ( www.phoca.cz )</author>
	<authorEmail></authorEmail>
	<authorUrl>www.phoca.cz</authorUrl>
	<copyright>Jan Pavelka</copyright>
	<license>GNU/GPL</license>
	<version>2.5.0</version>
	<!-- The description is optional and defaults to the name -->
	<description>Phoca Gallery Search Plugin - see http://www.phoca.cz/ for more information</description>

	<!-- Main File Copy Section -->
	<files>
		<filename plugin="phocagallery">phocagallery.php</filename>
		<filename plugin="phocagallery">phocagallery.xml</filename>
	</files>

	<!-- Language -->
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_search_phocagallery.ini</language>
	</languages>
	
	<administration>
		<languages >
			<language tag="en-GB">language/en-GB/en-GB.plg_search_phocagallery.ini</language>
		</languages>
	</administration>
	
	<params>
		<param name="search_limit" type="text" size="5" default="50" label="Search Limit" description="Number of Search items to return"/>
	</params>

</install>
